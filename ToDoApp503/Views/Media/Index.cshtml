@model IEnumerable<ToDoApp503.Models.Media>

@{
    ViewBag.Title = "Medya Listesi";
}

<h2>Medya</h2>

<p>
    @Html.ActionLink("Yeni Olustur", "Create", null, new { @class = "btn btn-primary" })
    <a class="dt-button buttons-excel buttons-html5 btn yellow btn-outline" tabindex="0" ,aria-controls="sample_1"
       href="@Url.Action("ExportToExcel","Medias")" style="float:right;"><span>Excel Aktar</span></a>
    <a class="dt-button buttons-excel buttons-html5 btn purple btn-outline" tabindex="0" ,aria-controls="sample_1"
       href="@Url.Action("ExportToCsv","Medias")" style="float:right;"><span>Csv Aktar</span>></a>
</p>
<table id="tblRecords" class="table">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Extension)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FileSize)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Month)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead><tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td class="text-nowrap">
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary  btn-xs" }) |
                @Html.ActionLink("Ayrıntılar", "Details", new { id = item.Id }, new { @class = "btn btn-success  btn-xs" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
</tbody>
</table>
